-- Set your password here
local password = "mypassword"

-- Clear and center the prompt
term.clear()
term.setCursorPos(1,1)
local w, h = term.getSize()
local function centerPrint(text, y)
    term.setCursorPos((w - #text) // 2 + 1, y)
    term.write(text)
end

-- Draw the password box
centerPrint("Enter Password:", h//2 - 1)
local boxWidth = 20
local boxX = (w - boxWidth) // 2
local boxY = h // 2
term.setCursorPos(boxX, boxY)
term.write(string.rep("_", boxWidth))

-- Get password input
term.setCursorPos(boxX, boxY)
local input = read("*") -- '*' masks input

-- Check password
if input == password then
    term.clear()
    centerPrint("Access Granted", h // 2)
    sleep(2)
    term.clear()
    -- Proceed past login (can put your main program here)
else
    term.clear()
    centerPrint("Access Denied", h // 2)
    sleep(2)
    os.shutdown() -- or use os.reboot() if you want auto-retry
end
